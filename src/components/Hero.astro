---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<header class="hero">
  <div class="hero-content">
    <h1>{title} <span class="highlight">à Toulon</span></h1>
    <p class="subtitle">{subtitle}</p>
    <div class="cta-group">
      <a href="#contact" class="cta-button primary">Demander un Devis Gratuit</a>
      <a href="#services" class="cta-button secondary">Découvrir nos Services</a>
    </div>
  </div>
  <div class="hero-overlay"></div>
</header>

<style>
  .hero {
    min-height: 100vh;
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1589939705384-5185137a7f0f?auto=format&fit=crop&w=1920') center/cover;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
    padding: 70px 0;
    margin-top: 0;
  }
  .hero-content {
    padding: 2rem;
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: auto;
    display: flex;
    flex-direction: column;
    min-height: calc(100vh - 140px); /* 70px top + 70px bottom */
    justify-content: center;
  }
  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    line-height: 1.2;
    font-weight: 700;
  }
  .highlight {
    color: rgb(var(--accent));
  }
  .subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  .cta-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  .cta-button.primary {
    background: rgb(var(--accent));
    color: white;
  }
  .cta-button.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    backdrop-filter: blur(10px);
  }
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    .cta-group {
      flex-direction: column;
    }
    .hero-content {
      min-height: calc(100vh - 140px);
      padding: 1rem;
    }
  }
</style>