<style>
	.contact-section {
		padding: 4rem 0;
		background: rgb(var(--background));
	}
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
	h2 {
		text-align: center;
		color: rgb(var(--primary));
		margin-bottom: 3rem;
		font-size: 2.5rem;
		font-weight: 700;
		position: relative;
	}
	h2::after {
		content: "";
		position: absolute;
		bottom: -0.5rem;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 4px;
		background: rgb(var(--accent));
		border-radius: 2px;
	}
	.contact-content {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 2rem;
	}
	.contact-info {
		padding: 1rem;
		font-size: 1.2rem;
	}
	.contact-info p {
		margin-bottom: 1rem;
	}
	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	input, textarea {
		padding: 0.8rem;
		border: 1px solid rgba(var(--primary), 0.2);
		border-radius: 4px;
		font-size: 1rem;
	}
	button {
		background: rgb(var(--accent));
		color: white;
		padding: 1rem;
		border: none;
		border-radius: 4px;
		cursor: pointer;
		transition: opacity 0.2s;
		font-size: 1.1rem;
		font-weight: 600;
	}
	button:hover {
		opacity: 0.9;
	}
	@media (max-width: 768px) {
		.contact-content {
			grid-template-columns: 1fr;
		}
		h2 {
			font-size: 2rem;
		}
	}
</style>